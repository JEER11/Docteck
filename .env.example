# Copy to .env and fill in real secrets. Do not commit .env.
# Frontend/Flask Firebase config (injected into window.__FIREBASE_CONFIG__)
FIREBASE_API_KEY=
FIREBASE_AUTH_DOMAIN=
FIREBASE_PROJECT_ID=
FIREBASE_STORAGE_BUCKET=
FIREBASE_MESSAGING_SENDER_ID=
FIREBASE_APP_ID=

# Stripe
STRIPE_SECRET_KEY=

# Google OAuth (Node)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

# OpenAI / Groq (Node)
OPENAI_API_KEY=
GROQ_API_KEY=

# Security and limits
API_SECRET=
API_STEALTH_404=1
API_RATE_LIMIT_PER_MINUTE=300

# Node/Flask URLs
FLASK_URL=http://flask-service:5000
SERVER_PORT=3001

# Gunicorn tuning
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=60
GUNICORN_KEEPALIVE=15
# Frontend environment variables for Create React App
# Copy to .env and adjust values. CRA only exposes REACT_APP_* at runtime.

# Override API base URL, otherwise frontend uses http://localhost:3001 in dev
REACT_APP_API_URL=

# Stripe publishable key for frontend payments
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# Weather widget (OpenWeather)
REACT_APP_OPENWEATHER_API_KEY=

# Firebase config (used by src/lib/firebase.js). You can also set non-prefixed
# versions below; the app will use REACT_APP_* first, then fall back.
REACT_APP_FIREBASE_API_KEY=
REACT_APP_FIREBASE_AUTH_DOMAIN=
REACT_APP_FIREBASE_PROJECT_ID=
REACT_APP_FIREBASE_STORAGE_BUCKET=
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=
REACT_APP_FIREBASE_APP_ID=
REACT_APP_FIREBASE_MEASUREMENT_ID=

# --- Backend/Flask (used by python_server) ---
# Port Flask listens on when launched via app.py
PORT=5000
# Optional: require this secret on all /api/* requests (header: X-API-SECRET)
API_SECRET=
# If 1/true, return 404 (not 401) when API_SECRET is missing/invalid
API_STEALTH_404=1
# Simple per-IP limiter for /api/* (requests per minute); 0 disables
API_RATE_LIMIT_PER_MINUTE=60
# Stripe secret (backend)
STRIPE_SECRET_KEY=
# SMTP (for email OTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=no-reply@docteck.local

# --- Node backend (server/) ---
# Prefer SERVER_PORT or NODE_PORT to avoid clashing with Flask PORT
SERVER_PORT=3001
# If your Flask server runs on a non-default port, set FLASK_URL here
# (default used by dev tasks is http://127.0.0.1:5050)
FLASK_URL=

# Google OAuth for Calendar integration
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3001/api/auth/google/callback

# AI providers (optional)
OPENAI_API_KEY=
GROQ_API_KEY=

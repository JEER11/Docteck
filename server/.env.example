# Server environment variables
# Copy this file to .env and fill in values.

# Web server port
PORT=3001

# Flask microservice base URL (for proxying /api/flask/*)
FLASK_URL=http://localhost:5000

# OpenAI / Groq / DeepInfra (optional; used by assistant endpoints)
OPENAI_API_KEY=sk-your-openai-key
GROQ_API_KEY=your_groq_key
DEEPINFRA_TOKEN=your_deepinfra_token

# Stripe (required for payments routes)
STRIPE_SECRET_KEY=sk_test_your_key

# Google OAuth (Calendar connect)
# Prefer setting these in the ROOT .env. This file is only a fallback.
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3001/api/auth/google/callback

# SMTP (optional; for email OTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=no-reply@docteck.local

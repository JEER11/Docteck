# Backend (Node/Express) environment â€” set these on Render/Railway/VM (NOT on Vercel frontend)
NODE_ENV=production

# CORS allowlist (comma-separated). Include your Vercel domain(s).
ALLOWED_ORIGINS=https://docteck.vercel.app

# Platform (Render) sets PORT automatically. For local dev use SERVER_PORT.
# Do not set PORT on Render.
SERVER_PORT=3001
# Optional: If you proxy to Flask, set its URL for the proxy endpoints
FLASK_URL=http://127.0.0.1:5050

# AI providers (server-side secrets)
OPENAI_API_KEY=
GROQ_API_KEY=
DEEPINFRA_TOKEN=

# Stripe secret (server-side only)
STRIPE_SECRET_KEY=

# Google OAuth (Calendar connect)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://<your-backend-domain>/api/auth/google/callback

# Optional: Gate /api/* behind a shared secret
API_SECRET=
